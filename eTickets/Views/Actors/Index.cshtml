@model IEnumerable<Actor>

    @{
        ViewData["Title"] = "Lisy of Actors";
    }
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table>
            <thead class="text-center">
                    <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfilePictureURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bio)
                    </th>
                    <th>
                        Actions
                    </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {                    
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width:150px"/>
                        </td>
                        <td class ="align-middle"> @Html.DisplayFor(modelItem => item.FullName) </td>
                        <td class="align-middle"> @Html.DisplayFor(modelItem => item.Bio)</td>
                        <td class="align-middle">
                            <btn class="btn btn-outline-primary">Edit</btn> |
                            <btn class="btn btn-outline-info">Details</btn> |
                            <btn class="btn btn-danger text-white">Delete</btn> |
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

    </div>
    <div style= "position: fixed; right: 25px; bottom:65px;" class="text-white">
        <a asp-controller="Actors" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add new</a>
    </div>